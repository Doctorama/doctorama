{# src/DT/DoctoramaBundle/Resources/views/Doctorama/agenda.html.twig#}
{% extends "DTDoctoramaBundle::index.html.twig" %}

{% block DTDoctoramaBody %}

	<div class="page-header borderColor">
      <h2>Calendrier RÃ©unions</h2>
    </div>
	
	<section class="row" >
		<div class="col-lg-5 col-md-6">
		
				<div class="table-responsive">
				<table class="table border1px table-striped">
					<thead>
						<tr>
							  <th>#</th>
							  <th>{{"now"|date("m/d")}} </th>
							  <th>Participants</th>
							  <th>Salle</th>
						</tr>
					</thead>
					 <tbody>
					 {%set i = 0%}
					 {% for reunion in reunions %}
					 	{%set i = i+1%}
					    <tr>
					    <td>{{i}}</td>
					    <td>{{ reunion.date|date("H:i") }}</td>
					    <td>
					    {%set chaine = '' %}
					   
						    {% for participant in reunion.personnes %}
						     {{ participant.nom  ~ " " ~   participant.prenom }}
						   {% endfor %}
						    <span class="pull-right glyphicon glyphicon-collapse-down" data-toggle="tooltip" data-content="{% for participant in reunion.personnes %}
						     {{ participant.nom  ~  participant.prenom }}
						   {% endfor %} "> </span></td>
						   <td>{{reunion.lieu}} </td>

						</tr>
					{% endfor %}
					 <div></div>	
					</tbody>
				</table>
				</div>
		</div>
		<div class="col-lg-7 col-md-6 ">
			<div id='calendar'></div>
		</div>
	</section>

{% endblock %}
