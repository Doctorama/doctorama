{# src/DT/DoctoramaBundle/Resources/views/Doctorama/liste_doctorants_encadres.html.twig#}
{% extends "DTDoctoramaBundle::index.html.twig" %}

{% block DTDoctoramaBody %}

<legend>
  <h3>{{title}}</h3>
</legend>

<div class="container-fluid">
	<div class="row">
		<table class="table table-striped">
			<tr>
				<th>
					Doctorant
				</th>
				<th>
					Sujet de thèse
				</th>
				<th>
					Encadrant
				</th>
				<th>
					Progression
				</th>
				<th>
				</th>
			</tr>
			{% for user in doctorants %}
				<tr>
					<td>{{ user.nom }} {{ user.prenom }}</td>
					<td><a href="#">{{ user.sujetMaster }}</a></td>
                                        
					<td>
						<ul>
							{% for encadrant in user.encadrantsMaster %}
								<li>
									{{ encadrant }}
								</li>
							{% endfor %}
						</ul>
					</td>
					<td>
					<div class="progress">
						<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
							60%
						</div>
					</div>
				</td>
				<td class="">
					<a href="" class="pull-right btn btn-info">Détails</a>
				</td>
				</tr>
			{% endfor %}
		</table>
	</div>
</div>
{% endblock %}